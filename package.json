{
  "name": "ts-promise",
  "version": "0.1.3",
  "description": "Fast, robust, type-safe promises",
  "author": "Martin Poelstra <martin@beryllium.net>",
  "main": "./dist/lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/poelstra/ts-promise"
  },
  "keywords": [
    "promise",
    "typescript",
    "promises-aplus"
  ],
  "bugs": {
    "url": "https://github.com/poelstra/ts-promise/issues"
  },
  "homepage": "https://github.com/poelstra/ts-promise",
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "mocha": "mocha -R spec dist/test/test-*.js",
    "cover": "istanbul cover _mocha -- -R spec dist/test/test-*.js",
    "lint": "node support/tslint_wrapper.js src/**.ts",
    "build:src": "cd src/lib && tsc && dts-generator --name ts-promise --baseDir . --out ../../dist/ts-promise.d.ts index.ts && echo declare module \\'ts-promise\\' {\\\\n\\\\texport \\* from \\'ts-promise/index\\'\\;\\\\n\\\\texport { default } from \\'ts-promise/index\\'\\;\\\\n} >> ../../dist/ts-promise.d.ts",
    "watch:src": "cd src/lib && tsc --watch",
    "build:test": "cd src/test && tsc",
    "watch:test": "cd src/test && tsc --watch",
    "build": "npm run build:src && npm run build:test",
    "clean": "rimraf -rf dist",
    "prepublish": "npm run lint && npm run build && npm run test"
  },
  "typescript": {
    "definition": "./dist/ts-promise.d.ts"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "coveralls": "^2.11.2",
    "dts-generator": "^1.3.1",
    "istanbul": "^0.3.13",
    "mocha": "^2.2.4",
    "multi-glob": "^0.4.0",
    "promises-aplus-tests": "*",
    "rimraf": "^2.3.2",
    "source-map-support": "^0.2.10",
    "tslint": "^2.1.1",
    "typescript": "^1.5.0-alpha"
  }
}
